        "whyChooseZenith": {
          "type": "object",
          "title": "Why Choose Zenith",
          "properties": {
            "title": {
              "type": "string",
              "title": "Title"
            },
            "subtitle": {
              "type": "string",
              "title": "Subtitle"
            },
            "images": {
              "type": "array",
              "title": "Images",
              "items": {
                "type": "object",
                "properties": {
                  "src": {
                    "type": "string",
                    "title": "Image Source",
                    "format": "uri"
                  },
                  "alt": {
                    "type": "string",
                    "title": "Alt Text"
                  }
                },
                "required": ["src", "alt"]
              },
              "default": []
            },
            "points": {
              "type": "array",
              "title": "Feature Points",
              "items": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "title": "Point Title"
                  },
                  "subtitle": {
                    "type": "string",
                    "title": "Point Subtitle"
                  },
                  "icon": {
                    "type": "string",
                    "title": "Icon Name"
                  }
                },
                "required": ["title", "subtitle", "icon"]
              },
              "default": []
            }
          },
          "required": ["title", "subtitle", "images", "points"]
        },
        "productDetails": {
          "type": "object",
          "title": "Product Details",
          "properties": {
            "title": {
              "type": "string",
              "title": "Title"
            },
            "sections": {
              "type": "array",
              "title": "Detail Sections",
              "items": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "title": "Section Title"
                  },
                  "points": {
                    "type": "array",
                    "title": "Points",
                    "items": {
                      "type": "string"
                    },
                    "default": []
                  }
                },
                "required": ["title", "points"]
              },
              "default": []
            }
          },
          "required": ["title", "sections"]
        },
        "workForYou": {
          "type": "object",
          "title": "How It Works",
          "properties": {
            "title": {
              "type": "string",
              "title": "Title"
            },
            "subtitle": {
              "type": "string",
              "title": "Subtitle"
            },
            "paragraphs": {
              "type": "array",
              "title": "Paragraphs",
              "items": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "title": "Paragraph Title"
                  },
                  "subtitle": {
                    "type": "string",
                    "title": "Paragraph Subtitle"
                  }
                },
                "required": ["title", "subtitle"]
              },
              "default": []
            }
          },
          "required": ["title", "subtitle", "paragraphs"]
        },
        "video": {
          "type": "object",
          "title": "Video Section",
          "properties": {
            "title": {
              "type": "string",
              "title": "Title"
            },
            "subtitle": {
              "type": "string",
              "title": "Subtitle"
            },
            "videos": {
              "type": "array",
              "title": "Videos",
              "items": {
                "type": "object",
                "properties": {
                  "src": {
                    "type": "string",
                    "title": "Video Source",
                    "format": "uri"
                  },
                  "poster": {
                    "type": "string",
                    "title": "Poster Image",
                    "format": "uri"
                  },
                  "title": {
                    "type": "string",
                    "title": "Video Title"
                  }
                },
                "required": ["src", "poster", "title"]
              },
              "default": []
            }
          },
          "required": ["title", "subtitle", "videos"]
        },
        "chooseYour": {
          "type": "object",
          "title": "Choose Your Product",
          "properties": {
            "title": {
              "type": "string",
              "title": "Title"
            },
            "subtitle": {
              "type": "string",
              "title": "Subtitle"
            },
            "perks": {
              "type": "array",
              "title": "Perks",
              "items": {
                "type": "string"
              },
              "default": []
            }
          },
          "required": ["title", "subtitle", "perks"]
        },
        "reviews": {
          "type": "object",
          "title": "Reviews Section",
          "properties": {
            "title": {
              "type": "string",
              "title": "Title"
            },
            "subtitle": {
              "type": "string",
              "title": "Subtitle"
            },
            "basedOn": {
              "type": "string",
              "title": "Based On Text"
            },
            "rating": {
              "type": "string",
              "title": "Rating"
            },
            "reviews": {
              "type": "array",
              "title": "Customer Reviews",
              "items": {
                "type": "object",
                "properties": {
                  "author": {
                    "type": "string",
                    "title": "Author"
                  },
                  "rating": {
                    "type": "number",
                    "title": "Rating",
                    "minimum": 1,
                    "maximum": 5
                  },
                  "comment": {
                    "type": "string",
                    "title": "Comment"
                  },
                  "verified": {
                    "type": "boolean",
                    "title": "Verified"
                  }
                },
                "required": ["author", "rating", "comment", "verified"]
              },
              "default": []
            }
          },
          "required": ["title", "subtitle", "basedOn", "rating", "reviews"]
        },
        "guarantee": {
          "type": "object",
          "title": "Guarantee Section",
          "properties": {
            "title": {
              "type": "string",
              "title": "Title"
            },
            "subtitle": {
              "type": "string",
              "title": "Subtitle"
            },
            "points": {
              "type": "array",
