{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Zenith Plugin Configuration",
  "type": "object",
  "properties": {
    "configName": {
      "type": "string",
      "title": "Config Name",
      "default": "default"
    },
    "storeData": {
      "type": "object",
      "title": "Store Data",
      "properties": {
        "productId": {
          "type": "string",
          "title": "Product ID",
          "format": "productSelector"
        },
        "variantId": {
          "type": "string",
          "title": "Variant ID",
          "format": "variantSelector"
        },
        "priceId": {
          "type": "string",
          "title": "Price ID",
          "format": "priceSelector"
        },
        "promotions": {
          "type": "array",
          "title": "Promotions",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "title": "Promotion ID"
              },
              "name": {
                "type": "string",
                "title": "Promotion Name"
              },
              "quantity": {
                "type": "number",
                "title": "Quantity",
                "minimum": 1
              },
              "subtitle": {
                "type": "string",
                "title": "Subtitle"
              },
              "image": {
                "type": "string",
                "title": "Image URL",
                "format": "uri"
              },
              "freeGift": {
                "type": "string",
                "title": "Free Gift Text"
              },
              "badge": {
                "type": "string",
                "title": "Badge Text"
              }
            },
            "required": ["name", "quantity", "subtitle", "image"]
          },
          "default": []
        }
      },
      "required": ["productId", "variantId", "priceId", "promotions"]
    },
    "productData": {
      "type": "object",
      "title": "Product Data",
      "properties": {
        "productName": {
          "type": "string",
          "title": "Product Name"
        },
        "categories": {
          "type": "array",
          "title": "Categories",
          "items": {
            "type": "string"
          },
          "default": []
        }
      },
      "required": ["productName", "categories"]
    },
    "content": {
      "type": "object",
      "title": "Content",
      "properties": {
        "assets": {
          "type": "object",
          "title": "Assets",
          "properties": {
            "logo": {
              "type": "string",
              "title": "Logo URL",
              "format": "uri"
            },
            "heroImages": {
              "type": "array",
              "title": "Hero Images",
              "items": {
                "type": "object",
                "properties": {
                  "src": {
                    "type": "string",
                    "title": "Image Source",
                    "format": "uri"
                  },
                  "alt": {
                    "type": "string",
                    "title": "Alt Text"
                  }
                },
                "required": ["src", "alt"]
              },
              "default": []
            },
            "thumbnails": {
              "type": "object",
              "title": "Thumbnails",
              "additionalProperties": {
                "type": "string",
                "format": "uri"
              }
            }
          },
          "required": ["logo", "heroImages"]
        },
        "hero": {
          "type": "object",
          "title": "Hero Section",
          "properties": {
            "title1": {
              "type": "string",
              "title": "Title 1"
            },
            "title2": {
              "type": "string",
              "title": "Title 2"
            },
            "description": {
              "type": "string",
              "title": "Description"
            },
            "benefits": {
              "type": "array",
              "title": "Benefits",
              "items": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "title": "Benefit Title"
                  },
                  "description": {
                    "type": "string",
                    "title": "Benefit Description"
                  }
                },
                "required": ["title", "description"]
              },
              "default": []
            },
            "usps": {
              "type": "array",
              "title": "USPs",
              "items": {
                "type": "object",
                "properties": {
                  "icon": {
                    "type": "string",
                    "title": "Icon Name"
                  },
                  "title": {
                    "type": "string",
                    "title": "USP Title"
                  },
                  "desc": {
                    "type": "string",
                    "title": "USP Description"
                  }
                },
                "required": ["icon", "title", "desc"]
              },
              "default": []
            },
            "productCardText": {
              "type": "string",
              "title": "Product Card Text"
            },
            "reviews": {
              "type": "object",
              "title": "Hero Reviews",
              "properties": {
                "rating": {
                  "type": "string",
                  "title": "Rating"
                },
                "text": {
                  "type": "string",
                  "title": "Rating Text"
                },
                "reviews": {
                  "type": "array",
                  "title": "Reviews",
                  "items": {
                    "type": "object",
                    "properties": {
                      "author": {
                        "type": "string",
                        "title": "Author"
                      },
                      "rating": {
                        "type": "number",
                        "title": "Rating",
                        "minimum": 1,
                        "maximum": 5
                      },
                      "comment": {
                        "type": "string",
                        "title": "Comment"
                      },
                      "verified": {
                        "type": "boolean",
                        "title": "Verified"
                      }
                    },
                    "required": ["author", "rating", "comment", "verified"]
                  },
                  "default": []
                },
                "faq": {
                  "type": "array",
                  "title": "FAQ Items",
                  "items": {
                    "type": "object",
                    "properties": {
                      "question": {
                        "type": "string",
                        "title": "Question"
                      },
                      "answer": {
                        "type": "string",
                        "title": "Answer"
                      }
                    },
                    "required": ["question", "answer"]
                  },
                  "default": []
                }
              },
              "required": ["rating", "text", "reviews", "faq"]
            }
          },
          "required": [
            "title1",
            "title2",
            "description",
            "benefits",
            "usps",
            "productCardText",
            "reviews"
          ]
        },
        "featured": {
          "type": "object",
          "title": "Featured Section",
          "properties": {
            "title": {
              "type": "string",
              "title": "Title"
            },
            "logos": {
              "type": "array",
              "title": "Logos",
              "items": {
                "type": "object",
                "properties": {
                  "src": {
                    "type": "string",
                    "title": "Logo Source",
                    "format": "uri"
                  },
                  "alt": {
                    "type": "string",
                    "title": "Alt Text"
                  },
                  "href": {
                    "type": "string",
                    "title": "Link URL",
                    "format": "uri"
                  }
                },
                "required": ["src", "alt", "href"]
              },
              "default": []
            }
          },
          "required": ["title", "logos"]
        },
        "faq": {
          "type": "array",
          "title": "FAQ Section",
          "items": {
            "type": "object",
            "properties": {
              "question": {
                "type": "string",
                "title": "Question"
              },
              "answer": {
                "type": "string",
                "title": "Answer"
              }
            },
            "required": ["question", "answer"]
          },
          "default": []
        },
        "benefitsBar": {
          "type": "array",
          "title": "Benefits Bar",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "results": {
          "type": "object",
          "title": "Results Section",
          "properties": {
            "title": {
              "type": "string",
              "title": "Title"
            },
            "subtitle": {
              "type": "string",
              "title": "Subtitle"
            },
            "image": {
              "type": "string",
              "title": "Image URL",
              "format": "uri"
            },
            "alt": {
              "type": "string",
              "title": "Alt Text"
            },
            "points": {
              "type": "array",
              "title": "Result Points",
              "items": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "title": "Point Title"
                  },
                  "description": {
                    "type": "string",
                    "title": "Point Description"
                  }
                },
                "required": ["title", "description"]
              },
              "default": []
            }
          },
          "required": ["title", "subtitle", "image", "alt", "points"]
        },
        "compare": {
          "type": "object",
          "title": "Compare Section",
          "properties": {
            "title": {
              "type": "string",
              "title": "Title"
            },
            "subtitle": {
              "type": "string",
              "title": "Subtitle"
            },
            "image": {
              "type": "string",
              "title": "Image URL",
              "format": "uri"
            },
            "alt": {
              "type": "string",
              "title": "Alt Text"
            }
          },
          "required": ["title", "subtitle", "image", "alt"]
        },
        "factsAndCertifications": {
          "type": "object",
          "title": "Facts and Certifications",
          "properties": {
            "title": {
              "type": "string",
              "title": "Title"
            },
            "image": {
              "type": "string",
              "title": "Image URL",
              "format": "uri"
            },
            "rightText": {
              "type": "string",
              "title": "Right Side Text"
            },
            "rightPoints": {
              "type": "array",
