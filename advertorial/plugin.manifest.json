{
  "name": "Advertorial Plugin",
  "pluginId": "advertorial-template",
  "description": "A complete advertorial-style checkout experience with Google Autocomplete, payment processing, and order confirmation",
  "version": "1.0.0",
  "author": "TagadaPay Team",
  "mode": "direct-mode",
  "category": "ecommerce",
  "tags": ["advertorial", "checkout", "ecommerce", "google-autocomplete", "payment"],
  "router": {
    "basePath": "/",
    "matcher": ".*",
    "excluder": null
  },
  "features": {
    "googleAutocomplete": true,
    "paymentProcessing": true,
    "orderConfirmation": true,
    "responsiveDesign": true,
    "configurationSystem": true
  },
  "requirements": {
    "sdk": "^2.1.0",
    "environment": {
      "VITE_GOOGLE_MAPS_API_KEY": "required"
    }
  }
}
