{
  "name": "Three Step Funnel V2",
  "pluginId": "three-step-funnel-v2",
  "description": "A high-converting three-step funnel template with nutra product content, modern UI components, and embedded checkout using Tagadapay V2 SDK",
  "version": "2.0.0",
  "author": "TagadaPay Team",
  "mode": "direct-mode",
  "category": "funnel",
  "tags": ["funnel", "three-step", "nutra", "checkout", "v2", "shadcn", "high-converting"],
  "preview": {
    "width": 375,
    "height": 812,
    "device": "mobile"
  },
  "router": {
    "basePath": "/",
    "matcher": ".*",
    "excluder": null
  },
  "features": {
    "threeStepFunnel": true,
    "nutraContent": true,
    "paymentProcessing": true,
    "orderConfirmation": true,
    "responsiveDesign": true,
    "modernUI": true,
    "configurationSystem": true,
    "progressIndicator": true
  },
  "requirements": {
    "sdk": "^2.2.0",
    "environment": {
      "VITE_GOOGLE_MAPS_API_KEY": "optional"
    }
  },
  "settings": {
    "allowCustomDomain": true,
    "requiresAuth": false,
    "mobileOptimized": true
  },
  "routing": {
    "type": "spa",
    "basePath": "/",
    "routes": [
      {
        "path": "/",
        "component": "App"
      },
      {
        "path": "/step1",
        "component": "Step1"
      },
      {
        "path": "/step2", 
        "component": "Step2"
      },
      {
        "path": "/step3",
        "component": "Step3"
      },
      {
        "path": "/thankyou/:orderId",
        "component": "ThankYou"
      }
    ]
  }
}
